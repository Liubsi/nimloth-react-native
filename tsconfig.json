{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "CommonJS",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@components*": ["src/components*"],
      "@common*": ["src/common*"],
      "@navigation*": ["src/navigation*"],
      "@screens*": ["src/screens*"],
      "@features*": ["src/features*"],
    }
  },
  "exclude": [
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
